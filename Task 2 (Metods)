// reduce ()
/*let numbers = [1,2,3,10,5,6,7]
 function reduce (arr,fn) {
     let result=arr[0];
     for (let i=1; i < arr.length; i++) {
         result = fn(result,arr[i])
    }
     return result;
 }
 let res = reduce (numbers, function(a,b) {
    return a*b;
})
console.log(res)
*/
