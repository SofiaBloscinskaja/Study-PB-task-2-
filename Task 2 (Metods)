/*2. filter

/* let numbers = [1,2,3,4,6]

function oddNumber (arr, fn) {
    let resultArr = []
      for (let i=0; i < arr.length; i++) {
          if(fn(arr[i])) {
          resultArr.push(arr[i]);
        }
    }
    return resultArr
       
}
let res = oddNumber (numbers, function(elem) {
    return elem % 2;
})
console.log(res)
*/
/*some ()
/*
 let numbers = [1,2,3,4,5,6,7]
 function some (arr,fn) {
     let ischeck =0;
     if (arr.length ===0 ) return false;
     for (let i=0; i < arr.length; i++) {
     if(fn(arr[i])) { 
         ischeck = true;
         i=arr.length;
     }
     else ischeck = false;
    }
     return ischeck;
 }
 let res = some (numbers, function(elem) {
    return elem < 3;
})
console.log(res)
*/
